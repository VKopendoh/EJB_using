<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>ejbServlet</servlet-name>
        <servlet-class>com.vkopendoh.ejb.web.EjbServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ejbServlet</servlet-name>
        <url-pattern>/ejb</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ConverterServlet</servlet-name>
        <servlet-class>com.vkopendoh.ejb.web.ConverterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ConverterServlet</servlet-name>
        <url-pattern>/converter</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CartServlet</servlet-name>
        <servlet-class>com.vkopendoh.ejb.web.CartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CartServlet</servlet-name>
        <url-pattern>/cart</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CreateCartServlet</servlet-name>
        <servlet-class>com.vkopendoh.ejb.web.CreateCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateCartServlet</servlet-name>
        <url-pattern>/newcart</url-pattern>
    </servlet-mapping>

</web-app>